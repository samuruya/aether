<title>Aether/Hub/<%= space.title %></title>
<link rel="stylesheet" type="text/css" href="looks.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
<link rel="icon" href="favicon.ico?v=1.1">

<body>
    <nav class="read-nav">
        <a href="/" class="read-nav-logo">                    
                <img src="https://i.ibb.co/4ZcLKjY/borderless.png" alt="">
        </a>
        <div class="read-nav-nav" id="nav">
            <div>


            </div>
        </div>

        <a href="/user" class="read-nav-btn usr">
            <button><%= user.name %> <img src="<%= user.pfp %>" alt=""></button>
        </a>
    </nav>

    <div class="space-title">
        <h1><%= space.title %></h1>
        <input class="addsp" type="submit" value="Delete Space" onclick="pfpPop()">

    </div>
    <div class="space-body">
        <div class="pfp-changer del-btn" id="pfpPop">
            <button onclick="xpfpPop()" class="bcclickout"></button>
            <div class="pop-midl-bc">
            </div>
            <div class="pop-smoll-input">
                <h1>Are You sure you want to delete this space?</h1>
                <form action="/hub/delspace" method="POST">
                    <input type="submit" value="<%= space.Sid %>" name="delspace">
                </form>
            </div>
    
        </div>

    </div>


    <script>
        
        function pfpPop() {
            document.getElementById('pfpPop').style.display = 'flex';
        }

        function xpfpPop() {
            document.getElementById('pfpPop').style.display = 'none';
        }

    </script>
</body>
