<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

<title>Aether/Reg</title>
<link rel="stylesheet" type="text/css" href="looks.css">

<body>
    <nav class="read-nav">
        <a href="/" class="read-nav-logo">                    
                <img src="https://i.ibb.co/4ZcLKjY/borderless.png" alt="">
        </a>
    </nav>
    <div class="bc">

        <div id='stars2'></div>
        <div id='stars3'></div>
    </div>



    <div class="login">
        <div class="login-part1">
            <h1 class="title-log">Register</h1>

            <div>
                    

                <form action="/register" method="POST">
                    <% if (typeof regerror !== "undefined") { %>
                        <p><%= regerror %></p>
                        <a href="/join#token-explain">learn more about it here</a>
                    <% } %>
                    <div>
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" required>
                    </div>
                    <div>
                        <label for="email">email</label>
                        <input type="text" name="email" id="email" required>
                    </div>
                    <div>
                        <label for="password">Password</label>
                        <input type="text" name="password" id="password" required>
                    </div>
                    <div>
                        <input type="text" name="password2" id="password2" required>
                    </div>
                    <div>
                        <label for="token" class="token">Token
                            <span class="tooltip">
                                <span class="tooltiptext">You need an invite token to create an account learn more under /join</span>
                                <span class="material-symbols-outlined">priority_high</span>
                            </span>
                        </label>
                        <input type="text" name="token" id="token" required>
                    </div>
                    <button type="submit">Enter</button>
                </form>
                <p class="signup"><a href="/login">Been here before?</a></p>
            </div>
        </div>

        <div class="login-part2">
            <div>
                <img src="https://i.ibb.co/D8KnzYs/mfimg.png" alt="">
            </div>
        </div>
    </div>



    
</body>
