<title>Aether/Hub</title>
<link rel="stylesheet" type="text/css" href="looks.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
<link rel="icon" href="favicon.ico?v=1.1">

<body>
    <nav class="read-nav">
        <a href="/" class="read-nav-logo">                    
                <img src="https://i.ibb.co/4ZcLKjY/borderless.png" alt="">
        </a>
        <div class="read-nav-nav" id="nav">
        </div>

        <a href="/user" class="read-nav-btn usr">
            <button><%= user.name %> <img src="<%= user.pfp %>" alt=""></button>
        </a>
    </nav>


    
    <div class="space-bar">
        <h1><%= user.name %>'s spaces</h1>
        <div class="list-wrapper">
            <div class="user-space-list">
                <% if(spaces.length != null) { %>
                    <% for (let i = 0; i < spaces.length; i++) { %>
                        <form action="/space" method="POST" name="space_name">
                        <input type = "hidden" name = "spaceid" value = "<%= spaces[i].Sid %>" />
                        <input type="submit" value="<%= spaces[i].title %>" name="openSpace">
                        </form>
                    <% } %>
                <% } %>
            </div>
        </div>
        <input class="addsp" type="submit" value="Add Space" onclick="pfpPop()">
    </div>

    <div class="pfp-changer" id="pfpPop">
        <button onclick="xpfpPop()" class="bcclickout"></button>
        <div class="pop-in-bc">
        </div>
        <div class="pop-smoll-input">
            <h1>Name Your Space!</h1>

            <form action="/hub/addspace" method="POST">                   
                <input type="text" name="spacename" id="spacename">
                <button type="submit">Create</button>
            </form>
        </div>

    </div>


    <script>

        function pfpPop() {
            document.getElementById('pfpPop').style.display = 'flex';
        }

        function xpfpPop() {
            document.getElementById('pfpPop').style.display = 'none';
        }

    </script>
</body>
